<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="340dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/img_liked"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/img_liked"
            android:layout_marginTop="37dp"
            />

        <TextView
            android:id="@+id/email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="Вы действительно хотите\n удалить из понравившихся??"
            android:textAlignment="center"
            android:textColor="#292929"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/img_liked" />

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:enabled="true"
            android:layout_gravity="center_vertical"
            android:text="Удалить"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/btn_active"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@+id/input_reset_email_fragment" />

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:text="Отмена"
            android:clickable="true"
            android:textAlignment="center"
            android:textColor="#494949"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/img_liked" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>